#!/usr/bin/env bash

set -e

set -o errexit    # always exit on error
set -o pipefail   # don't ignore exit codes when piping output
set -o nounset    # fail on unset variables
unset GIT_DIR     # Avoid GIT_DIR leak from previous build steps

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

mkdir -p "$BUILD_DIR/.tmp/"

cd $BUILD_DIR

# Install SWIG
echo "-----> download swig 2.0"
wget -P /tmp/ https://raw.githubusercontent.com/als0m3/heroku-buildpack-swig/main/swig-2.0.4.tar.gz

echo "SWIG downloaded"



echo "-----> Installing ..."
tar xzf /tmp/swig-2.0.4.tar.gz -C /tmp

cd /tmp/swig-2.0.4

./configure

make

make install

which swig

echo "SWIG installed"

# # End Install SWIG# # End Install SWIG